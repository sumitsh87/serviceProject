<h1>Listing requests</h1>

<table>
  <thead>
    <tr>
      <th>Userid</th>
      <th>Defecttype</th>
      <th>Defectdescription</th>
      <th>Defectseverity</th>
      <th>Requesteddate</th>
      <th>Currentstatus</th>
      <th>Requestresolvedate</th>
      <th>Paymentamount</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.userId %></td>
        <td><%= request.defecttype %></td>
        <td><%= request.defectdescription %></td>
        <td><%= request.defectseverity %></td>
        <td><%= request.requesteddate %></td>
        <td><%= request.currentstatus %></td>
        <td><%= request.requestresolvedate %></td>
        <td><%= request.paymentamount %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

